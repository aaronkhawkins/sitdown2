	<% end -%>
	<br>
		<% remote_form_for([@p, Achievement.new]) do |f| -%>
			I just <%= f.text_field :description %>.
		<% end -%>
	</br>
  <div id='recent_activity'><%= render :partial => 'profiles/recent_activity' %></div>
</div>






